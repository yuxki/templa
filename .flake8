[flake8]
max-line-length = 88
# E = pycodestyle errorso
# F = flake8 pyflakes
# W = pycodestyle warnings
# B = bugbear
# B9 = bugbear opinions
select = E, W, F, B, B9
extend_ignore =
      # line length
      E501
      # whitespace before ':'
      E203
      # line break before binary operator
      W503
per-file-ignores =
  src/templa/__init__.py: F401
